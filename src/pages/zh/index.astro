```astro
---
import Layout from '../../layouts/Layout.astro';
import InteractiveStack from '../../components/InteractiveStack.jsx';
import LiveMetrics from '../../components/LiveMetrics.jsx';
import HeroBackground from '../../components/HeroBackground.astro';

const base = import.meta.env.BASE_URL;
const mkPath = (path) => {
  const cleanBase = base.endsWith('/') ? base.slice(0, -1) : base;
  return `${cleanBase}${path.startsWith('/') ? path : '/' + path}`;
};
---

<Layout title="Moxin - 主权 AI 的开放生态系统">
  <div class="relative overflow-hidden bg-canvas-white">
    <!-- Hero Section -->
    <section class="relative pt-32 pb-20 lg:pt-48 lg:pb-32">
