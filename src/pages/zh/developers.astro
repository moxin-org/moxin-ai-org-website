---
// Developers page
import Layout from "../../layouts/Layout.astro";
import '../../styles/global.css';

const base = import.meta.env.BASE_URL;
const mkPath = (path) => {
  const cleanBase = base.endsWith('/') ? base.slice(0, -1) : base;
  return `${cleanBase}${path.startsWith('/') ? path : '/' + path}`;
};
---

<Layout
  title="开发者 - Moxin Org"
  description="全面的文档、API 和工具，用于构建强大的 AI 应用程序。"
>
  <div class="pt-32 pb-10 px-6 max-w-7xl mx-auto">
    <div class="text-center mb-10 animate-fade-in">
      <h1 class="text-5xl font-bold mb-6 text-text-primary">
        开发者资源
      </h1>
      <p class="text-xl text-text-secondary max-w-3xl mx-auto font-light">
        全面的文档、API 和工具，用于构建强大的 AI 应用程序。
        从我们的开源平台开始，加入开发者社区。
      </p>
    </div>
  </div>

  <section class="py-10 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          开源资源
        </h2>
        <p class="text-xl text-text-secondary max-w-3xl mx-auto font-light">
          探索我们的代码库、模型和文档。
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <a href="https://github.com/moxin-org" target="_blank" class="block text-center p-8 bg-white rounded-xl border border-gray-200 hover:border-accent-blue hover:shadow-md transition-all group">
          <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-blue-50 group-hover:text-accent-blue transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path></svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">GitHub 组织</h3>
          <p class="text-gray-600 mb-4">访问我们所有项目的源代码。</p>
          <span class="text-accent-blue font-medium flex items-center justify-center gap-1">
            查看代码库 <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
          </span>
        </a>

        <a href="https://huggingface.co/moxin-org" target="_blank" class="block text-center p-8 bg-white rounded-xl border border-gray-200 hover:border-accent-purple hover:shadow-md transition-all group">
          <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-purple-50 group-hover:text-accent-purple transition-colors">
            <img src={mkPath("/images/hf-logo.svg")} class="w-6 h-6 grayscale group-hover:grayscale-0 transition-all" alt="Hugging Face" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Hugging Face</h3>
          <p class="text-gray-600 mb-4">下载模型权重和数据集。</p>
          <span class="text-accent-purple font-medium flex items-center justify-center gap-1">
            查看模型 <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
          </span>
        </a>
      </div>
    </div>
  </section>
</Layout>