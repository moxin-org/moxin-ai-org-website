---
export interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
const base = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname;
const isZh = currentPath.startsWith('/zh');

const mkPath = (path) => {
  const cleanBase = base.endsWith('/') ? base.slice(0, -1) : base;
  return `${cleanBase}${path.startsWith('/') ? path : '/' + path}`;
};

const footerText = isZh 
  ? "© 2024 Moxin Intelligence. 开源企业级 AI 平台。构建未来。" 
  : "© 2024 Moxin Intelligence. Open-source enterprise AI platform. Built for the future.";
---

<footer class={`py-12 px-6 border-t border-gray-800 ${className}`}>
  <div class="max-w-7xl mx-auto text-center">
    <div class="flex items-center justify-center space-x-2 mb-4">
      <img src={mkPath("/images/moxin.png")} alt="Moxin Intelligence" class="h-6 w-auto" />
      <span class="text-white font-semibold">Moxin Intelligence</span>
    </div>
    <p class="text-gray-400 text-sm">
      {footerText}
    </p>
  </div>
</footer>
