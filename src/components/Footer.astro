---
export interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
const base = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname;
const isZh = currentPath.startsWith('/zh');

const mkPath = (path) => {
  const cleanBase = base.endsWith('/') ? base.slice(0, -1) : base;
  return `${cleanBase}${path.startsWith('/') ? path : '/' + path}`;
};

const footerText = isZh 
  ? "© 2025 Moxin Organization. 全栈开放 AI 生态系统，构建未来。" 
  : "© 2025 Moxin Organization. Full-Stack Open AI Ecosystem. Built for the future.";
---

<footer class={`py-12 px-6 border-t border-gray-200 dark:border-white/10 ${className}`}>
  <div class="max-w-7xl mx-auto flex items-center justify-center gap-6">
    <img src={mkPath("/images/moxin.png")} alt="Moxin Organization" class="h-16 w-auto" />
    <div class="text-left">
      <div class="text-text-primary dark:text-text-inverse font-semibold text-lg">Moxin Organization</div>
      <p class="text-text-secondary dark:text-text-secondary-inverse text-sm mt-1">
        {footerText}
      </p>
    </div>
  </div>
</footer>
