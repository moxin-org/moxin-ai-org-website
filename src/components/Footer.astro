---
export interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
const base = import.meta.env.BASE_URL;
const mkPath = (path) => {
  const cleanBase = base.endsWith('/') ? base.slice(0, -1) : base;
  return `${cleanBase}${path.startsWith('/') ? path : '/' + path}`;
};
---

