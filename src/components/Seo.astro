---
export interface Props {
	title: string;
	description: string;
	noindex?: boolean;
	pageTransitionName?: string;
}

const { title, description, noindex, pageTransitionName } = Astro.props;
---

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content={description}>
{noindex && <meta name="robots" content="noindex" />}
<title>{title}</title>

<!-- Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&family=Poppins:wght@600;700;800&display=swap" rel="stylesheet">

<!-- CSS -->
<link rel="stylesheet" href="https://unpkg.com/splitting@1.0.6/dist/splitting.css">
<link rel="stylesheet" href="/src/styles/global.css">

<!-- Scripts loaded via CDN -->
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
<script is:inline src="https://cdn.jsdelivr.net/npm/echarts@5.4.3/dist/echarts.min.js"></script>
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/matter-js/0.19.0/matter.min.js"></script>
<script is:inline src="https://unpkg.com/splitting@1.0.6/dist/splitting.js"></script>
