<script define:vars={{ base }}>
  const langSwitcher = document.getElementById('lang-switcher');
  const langText = document.getElementById('lang-text');
  
  // Helper to remove base path
  const stripBase = (path) => {
    if (path.startsWith(base)) {
      return path.slice(base.length);
    }
    return path;
  };

  // Helper to add base path
  const addBase = (path) => {
    const cleanBase = base.endsWith('/') ? base.slice(0, -1) : base;
    return `${cleanBase}${path.startsWith('/') ? path : '/' + path}`;
  };

  if (langSwitcher && langText) {
    // Check current URL to set initial state
    const currentPath = window.location.pathname;
    const relativePath = stripBase(currentPath);

    if (relativePath.startsWith('/zh') || relativePath.startsWith('zh')) {
      langText.innerText = 'ä¸­æ–‡';
    } else {
      langText.innerText = 'EN';
    }

    langSwitcher.addEventListener('click', () => {
      const currentPath = window.location.pathname;
      const relativePath = stripBase(currentPath);
      
      if (relativePath.startsWith('/zh') || relativePath.startsWith('zh')) {
        // Switch to English
        // Remove /zh or /zh/
        let newRelative = relativePath.replace(/^\/?zh\/?/, '/');
        if (newRelative === '') newRelative = '/';
        window.location.href = addBase(newRelative);
      } else {
        // Switch to Chinese
        const newRelative = relativePath === '/' ? '/zh/' : `/zh${relativePath}`;
        window.location.href = addBase(newRelative);
      }
    });
  }
</script>

